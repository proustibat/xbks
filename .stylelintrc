{
    "extends": "stylelint-config-standard",
    "rules": {
        "selector-type-no-unknown": null,
        "block-no-empty": null,
        "at-rule-no-unknown": [ true, {
            "ignoreAtRules": [
                "extend",
                "at-root",
                "debug",
                "warn",
                "error",
                "if",
                "else",
                "for",
                "each",
                "while",
                "mixin",
                "include",
                "content",
                "return",
                "function"
            ]
        }],
        "indentation": 2,
        "number-leading-zero": "never"
    }
}
